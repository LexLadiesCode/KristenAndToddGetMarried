<ul class="list-inline">
  <li><%= pluralize @total_guest_count, 'guest' %> attending</li>
  <li><%= pluralize @total_not_attending, 'person' %> not attending</li>
  <li><%= pluralize Rsvp.count, 'RSVP' %></li>
</ul>
<hr>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th># guests</th>
      <th>Attending?</th>
      <th>Options</th>
    </tr>
  </thead>

  <tbody>
    <% @rsvps.each do |rsvp| %>
      <tr>
        <td><%= rsvp.full_name %></td>
        <td><%= mail_to rsvp.email, rsvp.email %></td>
        <td><%= rsvp.guest_count %></td>
        <td><%= rsvp.attending? ? 'yes' : 'no' %></td>
        <td>
          <ul class="list-inline">
            <li><%= link_to 'View', rsvp %></li>
            <li><%= link_to 'Edit', edit_rsvp_path(rsvp) %></li>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'Make a new RSVP', new_rsvp_path, class: 'btn btn-default' %></p>
