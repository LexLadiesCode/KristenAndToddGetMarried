<h1>Listing rsvps</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th># guests</th>
      <th>Attending?</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @rsvps.each do |rsvp| %>
      <tr>
        <td><%= rsvp.full_name %></td>
        <td><%= mail_to rsvp.email, rsvp.email %></td>
        <td><%= rsvp.guest_count %></td>
        <td><%= rsvp.attending? ? 'yes' : 'no' %></td>
        <td>
          <%= link_to 'Show', rsvp %>
          <%= link_to 'Edit', edit_rsvp_path(rsvp) %>
          <%= link_to 'Destroy', rsvp, method: :delete, data: {confirm: 'Are you sure?'} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rsvp', new_rsvp_path %>
