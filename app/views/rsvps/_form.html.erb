<%= form_for(@rsvp, html: {class: "form-horizontal", role: "form"}) do |f| %>
  <% if @rsvp.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rsvp.errors.count, "error") %> prohibited this rsvp from being saved:</h2>

      <ul>
      <% @rsvp.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :first_name, class: "control-label  col-sm-3" %>
    <div class="col-sm-6">
      <%= f.text_field :first_name, class: "form-control", placeholder: "Enter your first name"%>
    </div>
  </div><br>
  <div class="form-group">
    <%= f.label :last_name, class: "control-label  col-sm-3" %>
    <div class="col-sm-6">
      <%= f.text_field :last_name, class: "form-control", placeholder: "Enter your last name" %>
    </div>
  </div><br>
  <div class="form-group">
    <%= f.label :email, class: "control-label  col-sm-3" %>
    <div class="col-sm-6">
      <%= f.text_field :email, class: "form-control"  %>
    </div>
  </div><br>
  <div class="form-group">
    <%= f.label :guest_count, class: "control-label  col-sm-3"%>
    <div class="col-sm-6">
      <%= f.number_field :guest_count, class: "form-control" %>
    </div>
  </div><br>
  <div class="form-group">
    <label class="control-label col-sm-offset-3">
      <%= f.check_box :attending %> Yes, I'll be attending
    </label>
  </div>

  <div class="form-group">
    <%= f.submit "Send RSVP", class: "btn btn-primary col-sm-3 col-sm-offset-3" %>
  </div>
<% end %>
