<% if gifts.count.nonzero? %>
  <ul class="gifts-list">
    <% gifts.each do |gift| %>
      <li>
        <div class="row">
          <div class="col-md-7 text-center">
            <div class="gift-details">
              <% if gift.image_url.present? %>
                <p>
                  <%= link_to image_tag(gift.image_url, alt: '', class: 'gift-image'), gift.url %>
                </p>
              <% end %>
              <%= link_to gift.name, gift.url, title: "#{number_to_currency gift.amount_remaining} remaining", data: {toggle: "tooltip", placement: 'bottom'} %>
              <% if gift.description.present? %>
                <p class="gift-description">
                  <%= gift.description %>
                </p>
              <% end %>
              <% if gift.location.present? %>
                <p class="gift-location">
                  <%= gift.location %>
                </p>
              <% end %>
            </div>
          </div>
          <div class="col-md-5 text-center">
            <% unless gift.unfunded? %>
              <p class="gift-percent-funded">
                <%= number_to_percentage gift.percent_funded, precision: 0 %>
                funded
              </p>
            <% end %>
            <div id="gift-thermometer-<%= gift.id %>" class="gift-thermometer thermometer horizontal <%= 'unfunded' if gift.unfunded? %>">
              <div class="track">
                <div class="progress" data-percent="<%= gift.percent_funded %>">
                  <div class="amount"></div>
                </div>
              </div>
            </div>
            <%= link_to 'Contribute to this gift!', gift.url, class: 'contribute-link', title: "#{number_to_currency gift.amount_remaining} remaining", data: {toggle: "tooltip", placement: 'bottom'} %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>
