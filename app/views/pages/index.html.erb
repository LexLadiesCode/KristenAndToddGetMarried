

<section id="intro">
  <div class="sky"></div>
  <div class="foreground">
    <div class="fireflies"></div>
    <%= image_tag("intro/bush.png", class: "bush scenery") %>
    <div class="fireflies"></div>
  </div>
  <div class="midground">
    <%= image_tag("intro/fire.png", class: "fire scenery") %>
    <%= image_tag("intro/bush.png", class: "bush-front scenery") %>
    <div class="fireflies"></div>
    <%= image_tag("intro/bush.png", class: "bush-back scenery") %>
      <div class="fireflies"></div>
    <%= image_tag("intro/tent.png", class: "tent scenery") %>
  </div>
  <div class="background">
    <div class="fireflies"></div>
    <%= image_tag("intro/bush.png", class: "bush scenery") %>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-4"></div>
      <div class="col-md-4">
        <div class="fireflies">
        </div>
        <nav>
          <ul>
            <li class="sign">
              <a id="logo" href="#">Kristen and Todd Get Married!</a>
            </li>
            <li class="sign">
              <a href="#story">Our Story</a>
            </li>
            <li class="sign">
              <a href="#location">Directions</a>
            </li>
            <li class="sign">
              <a href="#rsvp">RSVP</a>
            </li>
            <li class="sign">
              <a href="#registry">Registry</a>
            </li>
          </ul>
        </nav>
      </div>
      <div class="col-md-4"></div>
    </div>
  </div>
</section>

<section id="story">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2>Our Story</h2>
      </div>
    </div>
  </div>
</section>

<section id="location">
  <%= image_tag("location/fields.png", class: "fields scenery") %>
  <div class="scenery fields-foreground"></div>
  <%= image_tag("location/tree.png", class: "tree scenery") %>
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h2>Date</h2>
        <h3 class="subheader">September 21, 2014</h3>
      </div>
      <div class="col-md-6">
        <h2>Location</h2>
        <h3 class="subheader">Moonlight Fields Farm<br />Nicholasville, KY</h3>
      </div>
    </div>
    <div class="row" style="padding-top: 250px;">
      <div class="col-md-6">
      </div>
      <div class="col-md-6 sign-post">
        <div class="sign">
          <p><a href="#">Map</a></p>
          <p><a href="#">Directions</a></p>
          <p><a href="#">Hotels</a></p>
        </div>
      </div>
    </div>
  </div>
</section>

<section id="rsvp">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2>RSVP</h2>
      </div>
    </div>
  </div>
</section>

<section id="registry">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2>Registry</h2>
        <div id="gifts-list-wrapper" data-url="<%= gifts_url %>">
          <%= render 'gifts/list', gifts: @gifts %>
        </div>
      </div>
    </div>
  </div>
</section>
